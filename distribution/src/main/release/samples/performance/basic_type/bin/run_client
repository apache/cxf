OPERATION=echoString
BASEDON=Time
AMOUNT=30
PACKETSIZE=1
THREADS=0
HOST=localhost
PORT=20000

for i in $@
do 
  if [ "$i" = "-Operation" ]
  then
	OPERATION=$2
  fi

  if [ "$i" = "-BasedOn" ]
  then
	BASEDON=$2
  fi

  if [ "$i" = "-Amount" ]
  then
	AMOUNT=$2
  fi

  if [ "$i" = "-PacketSize" ]
  then
        PACKETSIZE=$2
  fi

  if [ "$i" = "-Threads" ]
  then
	THREADS=$2
  fi

  if [ "$i" = "-HostName" ]
  then
        HOST=$2
  fi

  if [ "$i" = "-Port" ]
  then
        PORT=$2
  fi
  
  shift

done

cd ..
ant client -Dcxf.running.time=$AMOUNT -Dcxf.operation=$OPERATION -Dcxf.basedon=$BASEDON -Dcxf.packet.size=$PACKETSIZE -Dcxf.threads=$THREADS -Dcxf.host.name=$HOST -Dcxf.port.name=$PORT

                   
